<!DOCTYPE html>
<html>

<head>
  <%- include('./components/head') %>
</head>

<body>
  <header>
    <h1>Best Books!</h1>
    <a id="search-nav" href="/searches/new">Search For a New Book</a>
    <img src="https://icon-library.com/images/white-menu-icon/white-menu-icon-4.jpg" />
  </header>

  <main id="index-main">
    <section id="sub-header">
      <p id="book-counter">
        <%= results.length %>
      </p>
      <h1>Saved Books</h1>
    </section>

    <ul>
      <% results.forEach(book=> { %>
        <li class="book-item" data-id="<%= book.id %>">
          <img class="book-image" src="<%= book.image_url %>" />
          <h4>
            <%= book.title %>
          </h4>
          <p>
            <%= book.author %>
          </p>
          <p><a href="/books/<%= book.id %>">View Details</a></p>
        </li>
        <% }) %>

    </ul>
  </main>
  <%- include('./components/footer')%>
</body>

</html>