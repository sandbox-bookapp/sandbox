body{
  width: 480px;
  background-color: rgb(34, 33, 33);
  font-family: 'Roboto Condensed', sans-serif;
}
section{
  width: 350px;
 height: 500px;
 overflow-y: scroll;
  background-color: rgb(219, 217, 217);
  position: relative;
  display:flex;
  justify-content: center;
align-items: center;
flex-wrap: wrap;
box-shadow: 5px 5px rgb(110, 110, 110);
margin-top: 30px;
}
section::-webkit-scrollbar{
  width: 0px;
  background: transparent;
}

header img{
  height: 20px;
  width: 20px;
  position: absolute;
  top: 25px;
  left: 450px;
}
nav a{
  color: white;
  margin-left: 200px;
  text-decoration: none;
  transition: 350ms all;
}
nav a:hover{
  color: black;
  background-color: white;
}
#book-detail{
  border: none;
height: 550px;
}
section img{
  width: 175px;
  height: 275px;
  border: 5px white solid;
  margin: 20px;
}
section h4{
  width: 300px;
  font-size: 1.3em;
  height: 50px;
  color: white;
  text-shadow: rgb(114, 114, 114) 1px 1px;
  letter-spacing: 1px;
  position: relative;
  padding: 15px;
text-align: center;
}
section p{
  padding: 9px;
}
#author{
  font-style: italic;
  margin-bottom: 30px;
}
